{% extends 'base.html.twig' %}

{% block title %}{{ content.title }}{% endblock %}
{% block description %}{{ content.description }}{% endblock %}
{% block includes %}
{{ parent() }}
    <!-- Twitter Card data -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="@erikaheidi">
    <meta name="twitter:title" content="{{ content.title }}">
    <meta name="twitter:description" content="{{ content.description }}">
    <meta name="twitter:creator" content="@erikaheidi">
    <!-- Twitter summary card with large image must be at least 280x150px -->
    <meta name="twitter:image:src" content="{% if content.cover_image %}{{ content.cover_image }}{% elseif content.frontMatterHas('thumb_image') %}https://eheidi.dev/{{ content.frontMatterGet('thumb_image') }}{% endif %}">

{% endblock %}

{% block content %}
    {% include '_partials/post.html.twig' with { 'content': content, 'full': true } %}
{% endblock%}

